@model RegisterViewModel

@{
    var signin = Context.Request.Query["signin"];
    ViewData["Title"] = "Зарегистрироваться на Confetti";
}

<partial name="_ValidationSummary" />

<div class="row justify-content-center">
    <div class="panel shadow-box shadow-box_additionals">
        <a class="nav-link text-uppercase" asp-area="" asp-controller="Account" asp-action="Login" asp-route-signin="@signin">Вы уже зарегистрированы?</a>
    </div>
</div>

<div class="row justify-content-center">
     <div class="panel shadow-box">         
        <div class="panel-body">

            <p class="font-weight-normal text-uppercase text-center">Зарегистрироваться через</p>

            <div class="socials-buttons justify-content-center">
                <a href="#" class="socials-buttons__button socials-buttons__button_vkontakte" title="Зарегистрироваться с помощью Вконтакте">
                    <svg width="36" height="36">
                        <use xlink:href="/icons-sprite.svg#vk"></use>
                    </svg>
                </a>
                <a href="#" class="socials-buttons__button socials-buttons__button_google" title="Зарегистрироваться с помощью Google">
                    <svg width="36" height="36">
                        <use xlink:href="/icons-sprite.svg#google"></use>
                    </svg>
                </a>
                <a href="#" class="socials-buttons__button socials-buttons__button_instagram" title="Зарегистрироваться с помощью Instagram">
                    <svg width="36" height="36">
                        <use xlink:href="/icons-sprite.svg#instagram"></use>
                    </svg>
                </a>
            </div>

            <hr class="hr-with-text">
            <div class="row justify-content-center">
                <p class="text-center hr-with-text">или</p>
            </div>

            <p class="font-weight-normal text-uppercase text-center">Зарегистрироваться, указав адрес электронной почты</p>

            <form asp-route="Register">

                <fieldset>

                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <span asp-validation-for="Email" class="danger"></span>
                        <input class="form-control" asp-for="Email" autofocus></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName">Имя</label>
                        <span asp-validation-for="FirstName" class="danger"></span>
                        <input class="form-control" asp-for="FirstName"></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Фамилия</label>
                        <span asp-validation-for="LastName" class="danger"></span>
                        <input class="form-control" asp-for="LastName"></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Пароль</label>
                        <span asp-validation-for="Password" class="danger"></span>
                        <input type="password" class="form-control" asp-for="Password" autocomplete="off"></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Пароль еще раз</label>
                        <span asp-validation-for="ConfirmPassword" class="danger"></span>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" autocomplete="off"></input>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Зарегистрироваться</button>
                    </div>

                </fieldset>
            
            </form>
        </div>       
     </div>
</div>

@section Header {
    <partial name="_ValidationStylesPartial" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}