@{
    var signin = Context.Request.Query["signin"];
}


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Disabled</a>
            </li>
        </ul>
    </div>
</nav>

<ul class="nav justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" href="#">ВПЕРВЫЕ НА CONFETTI?</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">ВЫ УЖЕ ЗАРЕГИСТРИРОВАНЫ?</a>
  </li>
</ul>


<div class="container">
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                @if (@ViewContext.RouteData.Values["Action"].ToString() == "Register")
                {
                    <p>Зарегистрироваться</p>
                }
                else
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register" asp-route-signin="@signin">Зарегистрироваться</a>
                }
            </li>
            <li class="nav-item">
                @if (@ViewContext.RouteData.Values["Action"].ToString() == "Login")
                {
                    <p>Войти</p>
                }
                else
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" asp-route-signin="@signin">Войти</a>
                }
            </li>
        </ul>
    </div>
</div>