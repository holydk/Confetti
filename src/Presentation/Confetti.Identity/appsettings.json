{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=confettidb;Trusted_Connection=True;MultipleActiveResultSets=true"    
  },
  "DataProvider": "SQLServer",
  "ApiClients": {
    "ConfettiSpa": {
      "ClientId": "ConfettiSpa",
      "Name": "ConfettiSpa",
      "DisplayName": "Confetti Shop",
      "Scopes": [ 
        "confetti_api",
        "account" 
      ],
      "RedirectUris": [
        "http://localhost:4200/signin-oidc",
        "http://localhost:4200/silent-refresh.html",
        "https://confetti-app.azurewebsites.net/signin-oidc"
      ],
      "PostLogoutRedirectUris": [
        "http://localhost:4200/",
        "https://confetti-app.azurewebsites.net"
      ]
    }
  },
  "ApiResources": {
    "ConfettiApi": {
      "Name": "confetti_api",
      "DisplayName": "Confetti API"
    },
    "ConfettiAccount": {
      "Name": "account",
      "DisplayName": "Confetti Account"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*"
}
